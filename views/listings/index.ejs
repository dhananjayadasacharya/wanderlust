<% layout("/layouts/boilerplate") %>

<body>
    <div class="container-fluid">
        <!-- Search Results Container -->
        <div id="searchResultsContainer" style="display: none;">
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <div id="searchResultsContent"></div>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>

        <div class="filters">
            <div class="filter-box">
                <i class="fa-solid fa-fire-flame-curved"></i>
                <p>Trending</p>
            </div>
            <div class="filter-box">
                <i class="fa-solid fa-bed"></i>
                <p>Rooms</p>
            </div>
            <div class="filter-box">
                <i class="fa-solid fa-mountain-city"></i>
                <p>Iconic Cities</p>
            </div>
            <div class="filter-box">
                <i class="fa-solid fa-mountain"></i>
                <p>Mountains</p>
            </div>
            <div class="filter-box">
                <i class="fa-solid fa-snowflake"></i>
                <p>Artic</p>
            </div>
            <div class="filter-box">
                <i class="fa-solid fa-campground"></i>
                <p>Camping</p>
            </div>
            <div class="form-check form-switch tax-filter ms-auto">
                <input class="form-check-input tax-toggle" type="checkbox" unchecked role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display After Tax</label>
            </div>
        </div>

        <div class="row g-3" id="listingsContainer">
            <% for(let listing of allListings){ %>
                <div class="col-12 col-sm-6 col-lg-4">
                    <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none">
                        <div class="listing-card card h-100">
                            <img class="card-img-top" src="<%= listing.image.url %>" alt="<%= listing.title %>" loading="lazy">
                            <div class="card-body">
                                <p class="card-text mb-2"><b><%= listing.title %></b></p>
                                <div class="d-flex align-items-center">
                                    <span class="currency">â‚¹</span>
                                    <div class="price mx-1">
                                        <%= listing.price.toLocaleString("en-IN") %>
                                    </div>
                                    <span>/night</span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</body>
<script src="/js/gst.js"></script>
<script src="/js/chatbot.js"></script>